datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

model Product {
  id          String   @id @default(cuid())
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  name        String
  brand       String
  price       Float
  description String
  images      String[]
}

model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  products Product[]
}
