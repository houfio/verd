datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String            @id @default(cuid())
  category    Category          @relation(fields: [categoryId], references: [id])
  categoryId  String
  scenario    Scenario?         @relation(fields: [scenarioId], references: [id])
  scenarioId  String?
  name        String
  brand       String
  price       Float
  description String
  label       String?
  images      String[]
  selected    SelectedProduct[]
}

model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  products Product[]
}

model Scenario {
  id       String            @id @default(cuid())
  name     String
  text     String
  products Product[]
  selected SelectedProduct[]
}

enum Survey {
  PRE
  POST
}

model Question {
  id      String       @id @default(cuid())
  survey  Survey
  name    String       @default("")
  title   String
  type    QuestionType
  order   Int
  data    Json
  answers Answer[]

  @@unique([survey, order])
}

enum QuestionType {
  SELECT
  SCALE
  OPEN
}

model Result {
  id        String            @id @default(cuid())
  date      DateTime          @default(now())
  condition Int
  answers   Answer[]
  products  SelectedProduct[]
}

model Answer {
  question   Question @relation(fields: [questionId], references: [id])
  questionId String
  result     Result   @relation(fields: [resultId], references: [id])
  resultId   String
  answer     String

  @@id([resultId, questionId])
}

model SelectedProduct {
  resultId   String
  result     Result   @relation(fields: [resultId], references: [id])
  scenarioId String
  scenario   Scenario @relation(fields: [scenarioId], references: [id])
  productId  String
  product    Product  @relation(fields: [productId], references: [id])

  @@id([resultId, scenarioId, productId])
}
